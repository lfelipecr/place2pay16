<odoo>
    <data>

        <template id="portal_my_home__draft_invoice" name="Show Sale Orders in Draft state" inherit_id="portal.portal_my_home" customize_show="True" priority="0">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Presupuestos en borrador</t>
                    <t t-set="url" t-value="'/my/draft_quotes'"/>
                    <t t-set="placeholder_count" t-value="'draft_quotation_count'"/>
                </t>
            </xpath>
        </template>  

   </data>
</odoo>